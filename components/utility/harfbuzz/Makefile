MODULE_NAME := $(notdir $(CURDIR))

LOCAL_INCLUDE := \
    -I $(LITEOSTOPDIR)/components/utility/harfbuzz/$(HARFBUZZ_VERSION)/src/hb-ucdn \
    -I $(LITEOSTOPDIR)/components/utility/freetype/$(FREETYPE_VERSION)/include \
