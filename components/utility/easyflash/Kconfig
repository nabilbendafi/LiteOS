config LOSCFG_COMPONENTS_EASYFLASH
    bool "Enable Easyflash"
    select LOSCFG_COMPONENTS_SFUD
    default n
    help
      Answer y to enable easyflash.

config LOSCFG_EASYFLASH_DEBUG_MODE
    bool "Enable debug mode"
    default n
    depends on LOSCFG_COMPONENTS_EASYFLASH
    help
      Answer y to enable debug mode.

config LOSCFG_EASYFLASH_INFO_MODE
    bool "Enable info mode"
    default n
    depends on LOSCFG_COMPONENTS_EASYFLASH
    help
      Answer y to enable info mode.

